<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.UtilisateurServlets.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getStockData</servlet-name>
        <servlet-class>com.example.projets3.servlets.stockData.getStockData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.authentification.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signupServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.authentification.signupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>googleAuthServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.authentification.googleAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getConseiller</servlet-name>
        <servlet-class>com.example.projets3.servlets.getConseiller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>googleAuthServlet</servlet-name>
        <url-pattern>/auth/google</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.authentification.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getStockData</servlet-name>
        <url-pattern>/stock</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>supprimerUtilisateurServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.UtilisateurServlets.SupprimerUtilisateurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>supprimerUtilisateurServlet</servlet-name>
        <url-pattern>/supprimer-utilisateur</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>modifierUtilisateurServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.UtilisateurServlets.ModifierUtilisateurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>modifierUtilisateurServlet</servlet-name>
        <url-pattern>/modifier-utilisateur</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createUtilisateurServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.UtilisateurServlets.CreateUtilisateurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createUtilisateurServlet</servlet-name>
        <url-pattern>/createUtilisateur</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>conseillerServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.ConseillerServlets.ConseillerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>conseillerServlet</servlet-name>
        <url-pattern>/conseillerList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SupprimerConseillerServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.ConseillerServlets.SupprimerConseillerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SupprimerConseillerServlet</servlet-name>
        <url-pattern>/supprimerConseiller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifierConseillerServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.ConseillerServlets.ModifierConseillerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>modifierConseillerServlet</servlet-name>
        <url-pattern>/modifierConseiller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createConseillerServlet</servlet-name>
        <servlet-class>com.example.projets3.servlets.ConseillerServlets.CreateConseillerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createConseillerServlet</servlet-name>
        <url-pattern>/createConseiller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getConseiller</servlet-name>
        <url-pattern>/conseiller</url-pattern>
    </servlet-mapping>
</web-app>